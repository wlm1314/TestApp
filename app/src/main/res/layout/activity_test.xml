<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:visibility="gone"
        android:id="@+id/btn_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendRequest"
        android:text="动画"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.wang.myapplication.layout.MyScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wang.myapplication.layout.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:textColor="#ffffff"
                android:gravity="center"
                app:discrollview_alpha="true"
                android:background="@color/colorAccent"
                android:text="asdfasdfasdfasdfaf"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@color/colorPrimary"
                app:discrollview_scaleX="true"
                android:text="asdfasdfasdfasdfaf"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@color/colorPrimary"
                app:discrollview_scaleY="true"
                android:text="asdfasdfasdfasdfaf"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@color/colorPrimary"
                app:discrollview_translation="fromTop|fromLeft"
                android:text="asdfasdfasdfasdfaf"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="#ffffff"
                android:gravity="center"
                app:discrollview_fromBgColor="@color/colorPrimary"
                app:discrollview_toBgColor="@color/colorAccent"
                android:text="asdfasdfasdfasdfaf"/>

        </com.wang.myapplication.layout.MyLinearLayout>

    </com.wang.myapplication.layout.MyScrollView>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/son"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>